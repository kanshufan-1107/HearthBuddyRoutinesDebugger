<Window x:Class="RoutineHelper.CompilerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutineHelper"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="路径配置" Height="140" Width="342">
    <Grid>
        <GroupBox x:Name="PathGroupBox" Header="路径配置" Height="55" VerticalAlignment="Top" Margin="10,10,9.6,0" >
            <StackPanel Orientation="Vertical" Margin="0,4,0,0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="DefaultRoutine:"/>
                    <TextBox x:Name="SilverfishPathTextBox" Width="150" VerticalContentAlignment="Center" IsReadOnly="True"/>
                    <Button x:Name="SelectSilverfishPathButton" Content="浏览" Click="SelectSilverfishPathButton_Click" Margin="4,0,0,0" Width="36"/>
                </StackPanel>
                
            </StackPanel>
        </GroupBox>
        <Button Content="编译" Height="20" Click="Button_Click" VerticalAlignment="Bottom" Margin="10" />
    </Grid>
</Window>
